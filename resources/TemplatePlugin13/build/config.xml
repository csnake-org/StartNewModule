<cruisecontrol>

    <!-- 
    \name TemplatePlugin
    \brief Builds the TemplatePlugin plugin.
    -->
    <project.default name="TemplatePlugin">

        <!-- Properties -->
        <property name="project.instance_name" value="templatePlugin"/>
        <property name="project.type_src_folder" value="Apps/Plugins"/>
        <property name="project.type_bin_folder" value="library"/>

        <!-- Modificationset: triggers for rebuild -->
        <modificationset>
            <svn/>
            <buildstatus logdir="${main.log_folder}/ThirdParty"/>
        </modificationset>

    </project.default>

</cruisecontrol>
